<div class="modal fade" id="modal-mou">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add MOU</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <button asp-for="mouChoice" value="1" style="padding-right: 10px" type="button" id="NewMou" class="btn btn-default">New MOU</button>
                    </div>
                    <div class="col">
                        <button asp-for="mouChoice" value="2" style="padding-left: 10px" type="button" id="ExsistingMou" class="btn btn-default">Exsisting MOU</button>
                    </div>
                </div>
                <div class="form-group" style="display: none" id="exmou">
                    <form method="post" asp-action="AddMou" asp-route-id="@Model.location.Id">
                        <div class="form-goup">
                            <label>Select Exsisting MOU</label>
                            <select asp-for="MouId" class="form-control" id="MouId" asp-items="ViewBag.MouId"></select>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="submit" value="Submit" />
                        </div>
                    </form>
                </div>
                <div class="form-group" style="display: none" id="newmou">
                    <form asp-action="CreateNewMou" enctype="multipart/form-data" asp-route-id="@Model.location.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>Mou Name</label>
                            <input asp-for="mou.Title" class="form-control" />
                            <span asp-validation-for="mou.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Choose File</label>
                            <input asp-for="mou.File" class="form-control" accept=".pdf" type="file" />
                        </div>
                        <div class="form-group">
                            <label>Start Date</label>
                            <input asp-for="mou.StartDate.Date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                            <span asp-validation-for="mou.StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>End Date</label>
                            <input asp-for="mou.EndDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                            <span asp-validation-for="mou.EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Contact First Name</label>
                            <input asp-for="mou.FirstName" class="form-control" />
                            <span asp-validation-for="mou.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Contact Last Name</label>
                            <input asp-for="mou.lastName" class="form-control" />
                            <span asp-validation-for="mou.lastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Contact Email</label>
                            <input asp-for="mou.Email" class="form-control" />
                            <span asp-validation-for="mou.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Contact Phone Number</label>
                            <input asp-for="mou.PhoneNumber" class="form-control" />
                            <span asp-validation-for="mou.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="modal-POC">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Contact</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="AddContact" asp-route-id="@Model.location.Id">
                @Html.HiddenFor(p => p.pocChoice, new { id = "Id" })
                <div class="modal-body">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <button asp-for="pocChoice" value="1" style="padding-right: 10px" type="button" id="NewPoc" class="btn btn-default">New Contact</button>
                            </div>
                            <div class="col">
                                <button asp-for="pocChoice" value="2" style="padding-left: 10px" type="button" id="ExsistingPoc" class="btn btn-default">Exsisting Contact</button>
                            </div>
                        </div>
                        <div class="form-goup" style="display: none" id="exspoc">
                            <label>Exsisting Contact</label>
                            <select asp-for="PocId" class="form-control" id="PocId" asp-items="ViewBag.PocId"></select>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div style="display: none" id="newpoc">
                            <div class="form-group">
                                <label class="control-label">Email Address</label>
                                <input asp-for="EmailAddress" class="form-control" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <p>AND/OR</p>
                            <div class="form-group">
                                <label class="control-label">Organization Name</label>
                                <input asp-for="OrganizationName" class="form-control" />
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>
