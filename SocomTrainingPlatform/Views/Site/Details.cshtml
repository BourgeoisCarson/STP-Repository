@model SocomTrainingPlatform.Models.DashboardModels.DashboardViewModels.DetailsVm

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout/_Layout.cshtml";
}
<div class="container-fluid py-4" style="background-color:white; box-shadow: 0 4px 2px -2px gray">
    <div class="row">
        <div class="col-md-4">
            <h3 class="align-content-center">@Html.DisplayFor(model => model.location.Name)</h3>
            <div>
                <h6>@Html.DisplayName(ViewBag.FullAddress)</h6>
            </div>
        </div>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="bi bi-map" style="padding-right: 10px"><button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-map">Map View</button></li>
            <li>
                <div class="btn-group">
                    <a href="#" type="button" class="btn btn-default" data-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a asp-action="EditSite" asp-route-id="@Model.location.Id">Edit Site</a></li>
                        <li><a style="color:red" asp-action="DeleteSite" asp-route-id="@Model.location.Id">Delete Site</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</div>
<div class="container-fluid py-4">
    <div class="row">
        <div class="container-fluid col-md-8">
            @if (Model.SiteFields.Count() < 0)
            {
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Site Fields</h2>
                        <div class="card-tools">
                            <a href="#" class="btn btn-tool btn-sm" data-toggle="modal" data-target="#modal-fields">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body" style="overflow-y: auto;">
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Site Fields</h2>
                        <div class="card-tools">
                            <a href="#" class="btn btn-tool btn-sm" data-toggle="modal" data-target="#modal-fields">
                                <i class="fas fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body" style="overflow-y: auto; height: 670px">
                        @{int fInt = 1;}
                        @foreach (var item in Model.SiteFields)
                        {
                            <div class="accordion" id="faccordion-@item.Field.Id" aria-multiselectable="true">
                                <div class="card">
                                    <div class="card-header" id="Heading-@item.Field.Id">
                                        <div type="button" data-target="#field_@fInt" data-toggle="collapse"
                                             aria-expanded="false" aria-controls="@item.Field.Name">
                                            <div class="row">
                                                <h4><strong>@item.Field.Name</strong></h4>
                                                <div style="position:absolute; right:5px" class="btn-group">
                                                    <a style="float:right" href="#" type="button" class="btn btn-default" data-toggle="dropdown">
                                                        <i class="fas fa-ellipsis-v"></i>
                                                    </a>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li><a asp-action="EditSiteField" asp-route-id="@item.Field.Id">Edit Field</a></li>
                                                        <li><a style="color:red" asp-action="DeleteSiteField" asp-route-id="@item.Field.Id">Delete Field</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <h4>Type: @item.Field.Field - @item.Field.Type</h4>
                                            <h4>Grid: @item.Field.Grid</h4>
                                        </div>
                                    </div>
                                    <div class="collapse" id="field_@fInt" aria-labelledby="Heading-@item.Field.Id" data-parent="#faccordion-@item.Field.Id">
                                        <div class="card-body">
                                            <p>@item.Field.Description</p>
                                            <button style="padding-bottom: 5px" type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-image" data-id="@item.Field.Id" data-string="target" btn-id="@item.Field.Id">Add Image</button>

                                            @if (item.Images != null)
                                            {
                                                <div class="row" style="padding-top: 10px">
                                                    <div class="form-group">
                                                        @foreach (var image in item.Images)
                                                        {
                                                            <a href="data:image/jpg;base64,@Convert.ToBase64String(image.Image)" class="yBox" data-ybox-group="group1">
                                                                <img src="data:image/jpg;base64,@Convert.ToBase64String(image.Image)" alt="New Image" width="200" />
                                                            </a>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            fInt++;
                        }
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">Notes</h3>
                    <div class="card-tools">
                        <a href="#" class="btn btn-tool btn-sm" data-toggle="modal" data-target="#modal-default">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <row>
                        @if (Model.note != null)
                        {
                            @foreach (var item in Model.location.LocationNotes)
                            {
                                <strong>@item.Date.ToString(string.Format("MM/dd/yyyy"))</strong>
                                <h6>@item.Subject.ToString()</h6>
                                <p>@item.Body.ToString()</p>
                                <hr>
                            }
                        }
                    </row>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">MOU Details</h3>
                    <div class="card-tools">
                        @if (Model.mou.Title != null)
                        {
                            <div class="btn-group">
                                <a href="#" class="btn btn-tool btn-sm" data-toggle="dropdown">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li><a href="#" type="button" data-toggle="modal" data-target="#modal-mou-update">Change MOU</a></li>
                                    <li><a type="button" style="color:red" asp-action="RemoveMou" asp-route-id="@Model.location.Id">Remove MOU</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="#" class="btn btn-tool btn-sm" data-toggle="modal" data-target="#modal-mou">
                                <i class="fas fa-plus"></i>
                            </a>
                        }

                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    @if (Model.mou.Title != null && Model.mou.EndDate <= DateTime.Now)
                    {
                        <strong><i class="fas fa-folder"></i> Name</strong>
                        <ul>
                            <li><a asp-controller="Mou" asp-action="Details" asp-route-id="@Model.mou.Id">@Model.mou.Title</a></li>
                        </ul>
                        <hr>
                        <strong>Status</strong>
                        <ul>
                            <li class="text-center bg-warning">Expired</li>
                        </ul>
                        <hr>
                        <strong>Expiration Date</strong>
                        <ul>
                            @Model.mou.EndDate.ToString(string.Format("MM/dd/yyyy"))
                        </ul>

                    }
                    @if (Model.mou.Title != null && Model.mou.EndDate >= DateTime.Now)
                    {
                        <strong><i class="fas fa-folder"></i> Name</strong>
                        <ul>
                            <li><a asp-controller="Mou" asp-action="Details" asp-route-id="@Model.mou.Id">@Model.mou.Title</a></li>
                        </ul>
                        <hr>
                        <strong>Status</strong>
                        <ul>
                            <li class="text-center bg-success">Active</li>
                        </ul>
                        <hr>
                        <strong>Expiration Date</strong>
                        <ul>
                            @Model.mou.EndDate.ToString(string.Format("MM/dd/yyyy"))
                        </ul>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">Point Of Contact</h3>
                    <div class="card-tools">
                        @if (Model.poc.FirstName != null)
                        {
                            <div class="btn-group">
                                <a href="#" class="btn btn-tool btn-sm" data-toggle="dropdown">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li><a href="#" type="button" data-toggle="modal" data-target="#modal-poc-update">Change POC</a></li>
                                    <li><a type="button" style="color:red" asp-action="RemovePoc" asp-route-id="@Model.location.Id">Remove POC</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="#" class="btn btn-tool btn-sm" data-toggle="modal" data-target="#modal-POC">
                                <i class="fas fa-plus"></i>
                            </a>
                        }
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    @if (Model.poc.FirstName != null)
                    {
                        <strong>Contact Name</strong>
                        <ul>
                            @Html.DisplayFor(model => model.poc.FirstName) @Html.DisplayFor(model => model.poc.LastName)
                        </ul>

                        <hr>

                        <strong><i class="fas fa-envelope"></i> Email Address</strong>
                        <ul>
                            @Html.DisplayFor(model => model.poc.EmailAddress)
                        </ul>

                        <hr />

                        <strong><i class="fas fa-phone"></i> Phone Number</strong>
                        <ul>
                            @Html.DisplayFor(model => model.poc.PhoneNumber)
                        </ul>
                    }
                    @if (Model.poc == null)
                    {
                        <h4>No Contact Added</h4>
                    }

                </div>
            </div>
            <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">Usage Dates</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div>
                        <strong>Active</strong>
                        <hr>
                        @if (Model.Excercises != null)
                        {
                            @foreach (var item in Model.Excercises)
                            {
                                if (item.StartDate <= DateTime.Now && item.EndDate > DateTime.Now)
                                {
                                    <a asp-controller="Excercise" asp-action="Details" asp-route-id="@item.Id">@item.TypeName</a>
                                    <p>@item.StartDate.ToString(string.Format("MM/dd/yyyy")) - @item.EndDate.ToString(string.Format("MM/dd/yyyy"))</p>
                                }
                            }
                        }
                    </div>
                    <div style="padding-top: 6px;">
                        <strong>Upcoming</strong>
                        <hr>
                        @if (Model.Excercises != null)
                        {
                            @foreach (var item in Model.Excercises)
                            {
                                if (item.StartDate >= DateTime.Now)
                                {
                                    <a asp-controller="Excercise" asp-action="Details" asp-route-id="@item.Id">@item.TypeName</a>
                                    <p>@item.StartDate.ToString(string.Format("MM/dd/yyyy")) - @item.EndDate.ToString(string.Format("MM/dd/yyyy"))</p>
                                }
                            }
                        }
                    </div>
                    <div style="padding-top: 6px;">
                        <strong>Completed</strong>
                        <hr />
                        @if (Model.Excercises != null)
                        {
                            @foreach (var item in Model.Excercises)
                            {
                                if (item.EndDate <= DateTime.Now)
                                {
                                    <a asp-controller="Excercise" asp-action="Details" asp-route-id="@item.Id">@item.TypeName</a>
                                    <p>@item.StartDate.ToString(string.Format("MM/dd/yyyy")) - @item.EndDate.ToString(string.Format("MM/dd/yyyy"))</p>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-fields">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add new site field</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="AddSiteField" asp-route-id="@Model.location.Id">
