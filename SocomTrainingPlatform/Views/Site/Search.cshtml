    <script>
        $("#choice").change(function () {
            $("#aa,#bb,#cc,#dd,#ee").val([]);


            if ($(this).val() == "Target") {
                $("#aa").attr("disabled", false);
                $("#Support,#InsertPoint,#Berthing,#Meeting").hide();
                $("#Target").show();
            }
            else if ($(this).val() == "Support") {
                $("#Target,#InsertPoint,#Berthing,#Meeting").hide();
                $("#Support").show();
            }
            else if ($(this).val() == "InsertPoint") {
                $("#Support,#Target,#Berthing,#Meeting").hide();
                $("#InsertPoint").show();
            }
            else if ($(this).val() == "Berthing") {
                $("#Support,#InsertPoint,#Target,#Meeting").hide();
                $("#Berthing").show();
            }
            else if ($(this).val() == "Meeting") {
                $("#Support,#InsertPoint,#Berthing,#Target").hide();
                $("#Meeting").show();
            }
        });

    </script>

    <script>
        $(document).ready(function () {
            setTimeout('$("#alert").hide()', 2000);
        });
    </script>

    <script>
    var stateOpt = @Html.Raw(Json.Serialize(ViewData["stateSearch"]));
    var cityOpt = @Html.Raw(Json.Serialize(ViewData["citySearch"]));
    </script>
    <script>
        $(function () {
            $("select#stateSearch").change(function () {
                var cid = $(this).val();
                $("select#citySearch").attr("disabled", false);

                $("select#citySearch").empty();
                $("select#citySearch").append(`<option value="${"Select City"}">${"Select City"}</option>`)

                $.getJSON(`/Site/GetCitys?cid=${cid}`, function (data) {
                    console.log(data);
                    $.each(data, function (i, item) {
                        $("select#citySearch").append(`<option value="${item.id}">${item.name}</option>`);
                    });
                });
            })
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#productName').autocomplete({
                source: '/Site/Suggest',
                select: function (event, ui) {
                    window.location.href = "/Site/SearchRedirect?name=" + ui.item.label;
                }
            });
        });
    </script>

}